{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "telemetry-route": {
        "ClusterId": "telemetry-cluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        }
      },
      "telemetry-api-route": {
        "ClusterId": "telemetry-cluster",
        "Match": {
          "Path": "/telemetry/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/telemetry"
          },
          {
            "PathPrefix": "/api/telemetry"
          }
        ]
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "api": {
            "Address": "http://localhost:5200"
          }
        }
      },
      "telemetry-cluster": {
        "Destinations": {
          "telemetry": {
            "Address": "http://localhost:5100"
          }
        }
      }
    }
  }
}
